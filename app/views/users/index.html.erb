<h1>Listing users</h1>
<hr>

<table class="table table-striped">
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th>Actions</th>
  </tr>

  <% @users.each do |user| %>
    <tr>
      <td><%= user.name %></td>
      <td><%= user.email %></td>
      <td>
        <%= link_to "Edit", edit_user_path(user) %>
        &nbsp;&nbsp;|&nbsp;&nbsp;
        <%= link_to "Delete", user_path(user), method: :delete, confirm: "Are you sure?" %>
      </td>
    </tr>
  <% end %>
</table>
